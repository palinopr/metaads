# AI Marketing Automation Platform
# CEO Note: These are your keys to the kingdom. Guard them well!

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (Supabase)
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_marketing_automation
DIRECT_URL=postgresql://postgres:password@localhost:5432/ai_marketing_automation

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Authentication (NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_random_secret_here

# AI Providers (CEO Priority: These power our agents)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
AI_PROVIDER=openai # or anthropic

# LangSmith Monitoring (CEO Mandate: Track everything)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=ai-marketing-automation

# Meta (Facebook) Ads API
META_APP_ID=your_facebook_app_id
META_APP_SECRET=your_facebook_app_secret
META_ACCESS_TOKEN=your_access_token
META_API_VERSION=v18.0

# Google Ads API (Phase 2)
# GOOGLE_ADS_CLIENT_ID=your_client_id
# GOOGLE_ADS_CLIENT_SECRET=your_client_secret
# GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_OPTIMIZATION=true
ENABLE_CONTENT_GENERATION=true
ENABLE_MULTI_CHANNEL=false # Coming soon!
MAX_CAMPAIGNS_PER_USER=10
MAX_DAILY_API_CALLS=10000

# Performance Settings
AGENT_TIMEOUT_SECONDS=30
MAX_RETRIES=3
CACHE_TTL_SECONDS=300

# Security
ENCRYPTION_KEY=generate_32_char_key_here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# CEO Dashboard
CEO_ALERT_EMAIL=ceo@company.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Development
LOG_LEVEL=info
ENABLE_DEBUG_MODE=false